{% extends 'FrontendBundle::tienda.html.twig' %}

{% block producto %}
              <a class="btn btn-primary" href="tienda">Volver A La Tienda</a><h1 class="text-lg-right">{{Producto.nombre}}</h1>
              <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-6">

                <div id="carouselExampleIndicators" class="carousel slide" data-interval="false">
                <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                              
                               {% set contador = 0 %}
                               {% for imagen in Imagenes %}
                               {% set contador = contador + 1 %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{contador}}"></li>
                                {% endfor %}
                </ol>
                <div class="carousel-inner" role="listbox">
                  <div class="carousel-item active">
                    <img height="200" class="d-block img-fluid" src="/{{ root }}{{ imagenes }}/{{ Producto.Imagen}}" alt="First slide">
                  </div>

                    {% for Imagen in Imagenes %}
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="/{{ root }}{{ imagenes }}/{{ Imagen.Path}}" alt="">
                            <div class="carousel-caption d-none d-md-block">
                              <p class="bg-dark">{{ Imagen.Epigrafe}}</p>
                            </div>
                        </div>
                        
                    {% endfor %}
                </div>                

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>

                  <br>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                  <h2>${{Producto.precio}}</h2>
                  {{ form_start(form) }}
                  {{ form_widget(form) }}
                  {{ form_end(form) }}
                </div>
 
              </div>
<h3>Descripcion del producto:</h3>

{% autoescape false %}
    {{Producto.descripcion}}
{% endautoescape %}

{% for Categoria in Categorias %}
{{Categoria}}
{% endfor %}

{% endblock %}
