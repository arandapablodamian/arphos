{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
	//datepicker para la fecha del turno
    $("#frontendbundle_formulariocontacto_diayhorapiso").datepicker({
        format: 'dd-mm-yyyy',
        autoclose:true,
        language: 'es'
	});
	//desactivo el boton del formulario
	document.getElementById("frontendbundle_formulariocontacto_enviar").disabled = true;
	
    $( "#frontendbundle_formulariocontacto_diayhorapiso, #frontendbundle_formulariocontacto_hora_hour, #frontendbundle_formulariocontacto_hora_minute" ).change(function() {

        		fecha= $( "#frontendbundle_formulariocontacto_diayhorapiso" ).val();
        		hora= $( "#frontendbundle_formulariocontacto_hora_hour" ).val();
            	minuto= $( "#frontendbundle_formulariocontacto_hora_minute" ).val();


        		ruta = "{{path('obtenerTurnoDisponible',{'fecha':'fecha', 'hora':'hora', 'minuto':'minuto'})}}";
        		ruta = ruta.replace("fecha", fecha);
        		ruta = ruta.replace("hora", hora);
        		ruta = ruta.replace("minuto", minuto);

         	    $.ajax({
                        type: "GET",
                        url: ruta,
                        success: function(data){
													if (data) {
														if (data.length >0) {
															$('#noPuedeCrearTurno').html('El horario no se encuentra disponible para solicitar un turno, por favor eliga otro horario.');
															$('#sePuedeCrearTurno').html('');
															document.getElementById("frontendbundle_formulariocontacto_enviar").disabled = true;
															console.log('aca');
														}else{
															$('#sePuedeCrearTurno').html('El horario se encuentra disponible para solicitar un turno.');
															$('#noPuedeCrearTurno').html('');
															document.getElementById("frontendbundle_formulariocontacto_enviar").disabled = false;
															console.log('aca2');

														}
													}else{
													$('#sePuedeCrearTurno').html('El horario se encuentra disponible para solicitar un turno.');
													$('#noPuedeCrearTurno').html('');
													document.getElementById("frontendbundle_formulariocontacto_enviar").disabled = false;
													console.log('ac3');
													}

											  }
                    }
             )


        });




