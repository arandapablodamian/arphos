{% extends 'FrontendBundle::template.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <style> 
      a {
        text-decoration: none;
        color: #4c2606;
      }
      .entrada{
         color: #4c2606;
      }
    </style>
{% endblock %}

{% block wrapper %}
  

  <div style="background-color:#faf4ee;   ">
    <div id="wrapper" style="background-image: url('{{asset('bundles/Frontend/images/template/background-wrapper.png') }}');background-repeat: no-repeat;
                  background-position: center;
                  background-size: cover;width:100%; height:1400px " >
      <div style="background-color: rgba(255,255,255,0.7);height:1400px;">
        <div class="row"  >
          <div class="col-md-2"></div>
          <div class="col-md-2"><a class="menuPrincipal" href="{{path('nosotros')}}">Nosotros</a></div>
          <div class="col-md-2" ><a class="menuPrincipal"href="{{path('galeria')}}">Galer√¨a</a></div>
          <div class="col-md-2"><a href="{{path('blog')}}">Blog</a></div>
          <div class="col-md-2"><a class="menuPrincipal" href="{{path('tienda')}}">Tienda</a></div>
          <div class="col-md-2"><a class="menuPrincipal" href="{{path('contacto')}}">Contacto</a></div>
        </div>
        <div style="width:70%;margin-left:auto;margin-right:auto;color:#d5bbaa">
          <hr />
        </div>
        <div class="row">
          
          <div class="col-md-3 col-sm-12" style="text-align:left;">
            <div class="row">
              <div class="col-md-1">
              </div>
              <div class="col-md-10">
                 <div id="accordion">
                    {% for categoria in categorias  %}
                      {% set contador=1 %}
                        {% if categoria.subcategorias is empty %}
                          <div>
                            <a href="{{path('blog',{'categoria': categoria.id})}}">{{categoria.titulo}}</a>
                            </div>
                            {% else %}
                              <div class="card">
                                <div class="card-header" id="headingOne">
                                  <h5 class="mb-0">
                                   <button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{contador}}" aria-expanded="true" aria-controls="collapse{{contador}}">
                                    {{categoria.titulo}}
                                   </button>
                                  </h5>
                                </div>
                                <div id="collapse{{contador}}" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                  <div class="card-body">
                                     {% for subcategoria in categoria.subcategorias %}
                                     <div>
                                        <a href="{{path('blog',{'categoria': subcategoria.id})}}">{{subcategoria.titulo}}</a>
                                     </div>
                                     
                                     {% endfor %}
                                  </div>
                                </div>
                                {% set contador=contador +1%}
                               
                          {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
           
          <div class="col-md-8" class="entrada">
                  <div>
                    <h3>{{entrada.titulo | raw}}</h3>
                  </div>
                  <div>
                    <img style="max-width:500px;max-height:500px;"src="{{asset('bundles/imagenes/paginas'~entrada.imagen)}}" alt="">
                  <div>
                    <br>
                  <div>
                    {{entrada.introduccion | raw}}
                  </div>
                  <div>
                    {{entrada.introduccion | raw}}
                  </div>
                  <br>
          </div>
        </div>
      </div>
    </div> 
   </div>
  </div>
    
{% endblock %}
